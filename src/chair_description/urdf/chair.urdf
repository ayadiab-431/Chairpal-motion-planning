<?xml version="1.0"?>
<robot name="smart_chair">

    <!-- Base -->
    <link name="base_link">
        <visual>
            <geometry>
                <box size="0.6 0.5 0.2"/>
            </geometry>
        </visual>
        <!-- Leg Front Left -->
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.1"/>
            </geometry>
            <origin xyz="0.25 0.25 -0.15"/>
            <material name="grey">
                <color rgba="0.5 0.5 0.5 1"/>
            </material>
        </visual>
         <!-- Leg Front Right -->
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.1"/>
            </geometry>
            <origin xyz="0.25 -0.25 -0.15"/>
            <material name="grey"/>
        </visual>
         <!-- Leg Middle Left -->
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.1"/>
            </geometry>
            <origin xyz="0.0 0.25 -0.15"/>
            <material name="grey"/>
        </visual>
         <!-- Leg Middle Right -->
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.1"/>
            </geometry>
            <origin xyz="0.0 -0.25 -0.15"/>
            <material name="grey"/>
        </visual>
         <!-- Leg Rear Left -->
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.1"/>
            </geometry>
            <origin xyz="-0.25 0.25 -0.15"/>
            <material name="grey"/>
        </visual>
         <!-- Leg Rear Right -->
        <visual>
            <geometry>
                <cylinder radius="0.02" length="0.1"/>
            </geometry>
            <origin xyz="-0.25 -0.25 -0.15"/>
            <material name="grey"/>
        </visual>
    </link>


  <!-- Wheel macro -->
    <link name="wheel_fl">
        <visual>
            <geometry>
                <cylinder radius="0.08" length="0.05"/>
            </geometry>
            <origin rpy="1.57 0 0"/>
            <material name="black">
                <color rgba="0.05 0.05 0.05 1"/>
            </material>
        </visual>
    </link>
    <joint name="wheel_fl_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_fl"/>
        <origin xyz="0.25 0.25 -0.2"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Front Right Wheel -->
    <link name="wheel_fr">
        <visual>
            <geometry>
                <cylinder radius="0.08" length="0.05"/>
            </geometry>
            <origin rpy="1.57 0 0"/>
            <material name="black"/>
        </visual>
    </link>
    <joint name="wheel_fr_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_fr"/>
        <origin xyz="0.25 -0.25 -0.2"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Middle Left Wheel -->
    <link name="wheel_ml">
        <visual>
            <geometry>
                <cylinder radius="0.08" length="0.05"/>
            </geometry>
            <origin rpy="1.57 0 0"/>
            <material name="black"/>
        </visual>
    </link>
    <joint name="wheel_ml_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_ml"/>
        <origin xyz="0.0 0.25 -0.2"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Middle Right Wheel -->
    <link name="wheel_mr">
        <visual>
            <geometry>
                <cylinder radius="0.08" length="0.05"/>
            </geometry>
            <origin rpy="1.57 0 0"/>
            <material name="black"/>
        </visual>
    </link>
    <joint name="wheel_mr_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_mr"/>
        <origin xyz="0.0 -0.25 -0.2"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Rear Left Wheel -->
    <link name="wheel_rl">
        <visual>
            <geometry>
                <cylinder radius="0.08" length="0.05"/>
            </geometry>
            <origin rpy="1.57 0 0"/>
            <material name="black"/>
        </visual>
    </link>
    <joint name="wheel_rl_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_rl"/>
        <origin xyz="-0.25 0.25 -0.2"/>
        <axis xyz="0 1 0"/>
    </joint>

    <!-- Rear Right Wheel -->
    <link name="wheel_rr">
        <visual>
            <geometry>
                <cylinder radius="0.08" length="0.05"/>
            </geometry>
            <origin rpy="1.57 0 0"/>
            <material name="black"/>
        </visual>
    </link>
    <joint name="wheel_rr_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_rr"/>
        <origin xyz="-0.25 -0.25 -0.2"/>
        <axis xyz="0 1 0"/>
    </joint>


</robot>
